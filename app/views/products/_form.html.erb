<%= form_with(model: product, local: true, multipart: true) do |form| %>
<div class="card">
  <div class="card-body">
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group.col-md-6">

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :size %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :colour %>
    <%= form.text_field :colour, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :condition %>
    <%= form.text_field :condition, class: "form-control" %>
  </div>


  <div class="mb-3">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image %>
    <%= form.file_field :image, multiple: false, direct_upload: true, accept: 'image/png, image/jpg, image/jpeg' %> 
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary mb-3" %>
  </div>
    </div>
    
</div>
</div>
<% end %>
